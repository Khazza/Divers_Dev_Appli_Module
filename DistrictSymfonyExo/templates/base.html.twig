<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        The District - Restaurant et Commande en Ligne!
        {% block title %}{% endblock %}
    </title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}"> 
    <link rel="icon" href="{{ asset('img/the_district_brand/favicon.png') }}">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand ms-3" href="{{ path('app_home') }}">
            <img src="{{ asset('img/the_district_brand/logo_transp.png') }}" alt="Logo" height="60">
        </a>

        <!-- Toggle button -->
        <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto mx-2">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Catégories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Plats</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>

            <!-- Login and register area -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="btn btn-outline-light mx-1 my-1" href="#">S'identifier</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-light mx-1 my-1" href="#">S'enregistrer</a>
                </li>
            </ul>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <footer class="footer text-center py-3 mt-2 mb-3 bg-dark text-white">
        <div class="container d-flex align-items-center justify-content-between h-100 flex-md-row flex-column">
            <div class="text-md-start text-center mb-md-0 mb-3">
                <a href="#" class="mr-auto footer-link text-sm text-white">Mentions légales</a>
                <a href="#" class="mr-auto footer-link text-sm text-white">Politique de confidentialité</a>
            </div>
            <div class="text-md-end text-center">
                <a href="#" class="ms-3 text-white"><i class="fab fa-facebook fa-lg"></i></a>
                <a href="#" class="ms-3 text-white"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="#" class="ms-3 text-white"><i class="fab fa-instagram fa-lg"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
